---
import { getI18N } from "@/a18n/index.ts";

const { currentLocale } = Astro;
const t = getI18N({ currentLocale: currentLocale ?? "es" });
---

<section class="md:h-screen">
  <div
    class="container h-full mx-auto px-4 py-6 md:py-16 flex items-center justify-center"
  >
    <p class="text-2xl md:text-[54px] leading-normal" id="about-text">
      {t.ABOUT.TEXT}
    </p>
  </div>
</section>

<section
  class="h-screen relative flex items-center justify-center"
  id="about-video-section"
>
  <video
    src="/about.mp4"
    autoplay
    loop
    muted
    class="w-full h-full object-cover aspect-video"
    id="about-video"
    aria-label="About Video"
  >
  </video>
  <div class="absolute left-0 top-0 w-full h-0 bg-white" id="video-mask-1">
  </div>
  <div class="absolute left-0 bottom-0 w-full h-0 bg-white" id="video-mask-2">
  </div>
</section>

<section id="about-content-section" class="overflow-hidden">
  <div class="container mx-auto px-4 py-6 md:py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 md:gap-0">
      <div class="max-w-[368px] w-full">
        <img
          src="/images/about-1.jpg"
          alt="About Us Image 1"
          class="w-full h-full object-cover aspect-square about-content-image origin-center"
        />
      </div>
      <p class="text-lg mb-6 md:mb-0" set:html={t.ABOUT.TEXT1} />
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 md:gap-0 items-end">
      <p
        class="text-lg order-2 md:order-1 mb-6 md:mb-0"
        set:html={t.ABOUT.TEXT2}
      />
      <div class="max-w-[368px] w-full ml-auto order-1 md:order-2">
        <img
          src="/images/about-2.jpg"
          alt="About Us Image 2"
          class="w-full h-full object-cover aspect-square about-content-image origin-center"
        />
      </div>
    </div>
    <div>
      <div class="max-w-[368px] w-full mx-auto md:mt-24">
        <img
          src="/images/about-3.jpg"
          alt="About Us Image 3"
          class="w-full h-full object-cover aspect-square about-content-image origin-center"
        />
      </div>
    </div>
  </div>
</section>
