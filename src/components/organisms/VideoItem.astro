---
import type { Video } from "@/types/videos";

interface Props {
  video: Video;
}

const { video } = Astro.props;
---

<div
  class="aspect-[560/315] relative group custom-cursor-target"
  id={`id-${video.slug}`}
>
  <a
    href={`/videos/${video.slug}`}
    class="block w-full h-full relative overflow-hidden cursor-none video-item"
  >
    <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent">
    </div>
    <img
      src={video.thumbnail}
      alt={video.title}
      class="w-full h-full object-cover object-center"
      transition:name={`video-thumbnail-${video.slug}`}
    />
    <div
      class="absolute bottom-0 left-0 p-6 w-full opacity-0 group-hover:opacity-100 transition-opacity duration-300"
    >
      <h3 class="text-2xl font-extrabold italic uppercase">{video.client}</h3>
      <p class="text-lg">‘{video.title}’ {video.date.split(",")[1] ?? ""}</p>
    </div>
  </a>
</div>
