---
interface Props {
  tag: "a" | "button";
  href?: string;
  variant?: "primary" | "ghost";
  classList?: string;
}

const { tag = "a", href, variant = "primary", classList } = Astro.props;
const Tag = tag;

const styles = {
  generic:
    "inline-flex items-center justify-center px-4 py-2 rounded border text-sm font-semibold transition-colors duration-100 focus:outline-none cursor-pointer",
  primary:
    "bg-primary hover:bg-primary/80 active:bg-primary/80 border-primary hover:border-primary/80 active:border-primary/90 text-white",
  ghost:
    "bg-transparent hover:bg-primary/20 active:bg-primary/20 border-primary text-primary",
};
---

<Tag href={href} class:list={[styles.generic, styles[variant], classList]}>
  <slot />
</Tag>
