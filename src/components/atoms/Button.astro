---
interface Props {
  tag: "a" | "button";
  href?: string;
  disabled?: boolean;
}

const { tag = "a", href, disabled } = Astro.props;
const Tag = tag;
---

<Tag
  href={href}
  class="inline-flex items-center gap-5 text-[38px] leading-none"
  class:list={[
    !disabled ? "cursor-pointer group" : "cursor-not-allowed opacity-50",
  ]}
  disabled={disabled}
>
  <slot />
  <svg
    width="18"
    height="18"
    viewBox="0 0 18 18"
    fill="none"
    xmlns="http://www.w3.org/2000/svg"
    class="transition-transform group-hover:translate-x-2"
  >
    <path
      d="M12.3461 0.839999L17.9061 9.04L12.3461 17.32H8.86609L14.1061 9.04L8.86609 0.839999H12.3461ZM14.9061 7.6V10.52H0.426094V7.6H14.9061Z"
      fill="currentColor"></path>
  </svg>
</Tag>
